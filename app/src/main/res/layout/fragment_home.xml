<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color"
        tools:context=".ui.ruler.RulerFragment">

        <Button
            android:id="@+id/cm"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:background="@color/colorAccent"
            android:text="CM"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/inch"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:background="@color/colorAccent"
            android:text="INCH"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cm" />


        <com.book.store.stock.karafs.utility.RulerViewVertical
            android:id="@+id/vertical"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:padding="4dp"
            app:backgroundColor="@color/colorAccent"
            app:defaultLabelText="سانتی متر"
            app:labelColor="@android:color/black"
            app:labelTextSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pointerColor="@android:color/white"
            app:pointerRadius="4dp"
            app:unit="cm" />

        <com.book.store.stock.karafs.utility.RulerView
            android:id="@+id/horizontal"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:backgroundColor="@color/colorPrimary"
            app:defaultLabelText="سانتی متر"
            app:labelColor="@android:color/white"
            app:labelTextSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:pointerColor="@android:color/black"
            app:pointerRadius="4dp"
            app:rulerColor="@color/colorAccent"
            app:textColor="@color/colorAccent"
            app:unit="cm" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>